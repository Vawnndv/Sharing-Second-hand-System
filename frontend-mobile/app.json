{
  "expo": {
    "name": "ReTreasure",
    "slug": "retreasure",
    "scheme" : "frontend-mobile",
    "version": "1.0.9",
    "orientation": "portrait",
    "icon": "./assets/icon_logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access camera.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      }
    },
    "android": {
      "versionCode": 9,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon_logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.retreasure.frontendmobile",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "frontend-mobile"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAbk-Yxdn_arPK7y6BHG25BauJy4f-vppc"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-location",
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow  $(PRODUCT_NAME) to access your photos.",
          "cameraPermission": "Allow  $(PRODUCT_NAME) to access your camera."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon_logo.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a656517f-3660-4b78-a947-ac5f8d6691fd"
      }
    }  
  }
}
